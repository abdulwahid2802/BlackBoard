<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:background="@drawable/back_main_singin"
    android:weightSum="100">
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/relativeLayout1"
        android:layout_weight="50" />
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/relativeLayout2"
        android:layout_weight="50">
        <android.support.design.widget.TextInputLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/inputUsername"
            android:background="@drawable/back_input"
            android:layout_centerHorizontal="true">
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#F5f5f5"
                android:textSize="10sp"
                android:background="@drawable/back_edittext"
                android:gravity="center_horizontal"
                android:hint="Username"
                android:id="@+id/textInputEditText1" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayout2"
            android:background="@drawable/back_input"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/inputUsername"
            android:layout_marginTop="10dp">
            <android.support.design.widget.TextInputEditText
                android:textSize="10sp"
                android:layout_width="match_parent"
                android:background="@drawable/back_edittext"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:gravity="center_horizontal"
                android:id="@+id/textInputEditText2" />
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:id="@+id/Linearlayout2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_below="@id/textInputLayout2"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember me?"
                style="@style/Base.Widget.AppCompat.CompoundButton.CheckBox"
                android:pointerIcon="zoom_out"
                android:forceHasOverlappingRendering="false"
                android:allowUndo="true"
                android:textColor="#9Cf5f5f5"
                android:buttonTint="#CCF5f5f5"
                android:textStyle="italic" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Linearlayout2"
            android:id="@+id/Linearlayout3"
            android:orientation="horizontal"
            android:weightSum="100">
            <Button
                android:layout_height="35dp"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/back_btn_singin"
                android:text="LOGIN"
                android:textColor="#99f5f5f5" />
            <Button
                android:layout_height="35dp"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/back_btn_signup"
                android:text="SIGNUP"
                android:textColor="#44f5f5f5"
                android:enabled="false" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>